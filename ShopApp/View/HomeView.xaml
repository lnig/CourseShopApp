                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <CheckBox Height="15" Margin="0 0 8 0"/>
                                <Image Source="/Assets/Icons/star.bmp" Height="20" Width="20" Margin="0 0 0 3"/>
                                <Image Source="/Assets/Icons/star.bmp" Height="20" Width="20" Margin="0 0 0 3"/>
