                                    </DockPanel>
                                </StackPanel>
                                <!-- Repeat Product Template as Needed -->
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!--Main Content Right Side(Filters)-->
                <StackPanel Grid.Column="1" Margin="12 -44 12 24">
                    <StackPanel>
                        <DockPanel LastChildFill="False">
                            <TextBlock VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" Text="Filters" DockPanel.Dock="Left"/>
                            <Button Content="Clear All" DockPanel.Dock="Right" Background="Transparent" BorderBrush="Transparent" FontSize="14" FontWeight="SemiBold"/>
                        </DockPanel>

                        <Separator Height="1" Background="#EAECF0" Margin="0 24"/>

                        <StackPanel>
                            <TextBlock Text="Salary Range" FontSize="16" FontWeight="Bold"/>
                            <DockPanel Margin="0 12 0 0">
                                <TextBox DockPanel.Dock="Left" BorderBrush="Transparent" BorderThickness="0" Background="#F3F4F6" Width="77" Height="28" VerticalContentAlignment="Center"/>
                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="to" FontSize="14" Margin="32 0"/>
                                <TextBox DockPanel.Dock="Right" BorderBrush="Transparent" BorderThickness="0" Background="#F3F4F6" Width="78 " Height="28" VerticalContentAlignment="Center"/>
                            </DockPanel>
                        </StackPanel>

                        <Separator Height="1" Background="#EAECF0" Margin="0 32"/>

                        <StackPanel>
                            <TextBlock Text="Condition 1" FontSize="16" FontWeight="Bold"/>
                            <CheckBox Content="Checkbox" Margin="0 12 0 4"/>
                            <CheckBox Content="Checkbox" Margin="0 4"/>
                            <CheckBox Content="Checkbox" Margin="0 4"/>
                        </StackPanel>

                        <Separator Height="1" Background="#EAECF0" Margin="0 32"/>

                        <StackPanel>
                            <TextBlock Text="Condition 2" FontSize="16" FontWeight="Bold"/>
                            <CheckBox Content="Checkbox" Margin="0 12 0 4"/>
                            <CheckBox Content="Checkbox" Margin="0 4"/>
                            <CheckBox Content="Checkbox" Margin="0 4"/>
                        </StackPanel>

                        <Separator Height="1" Background="#EAECF0" Margin="0 32"/>

                        <StackPanel Margin="0 5 0 0">
                            <TextBlock Text="Rating" FontSize="16" FontWeight="Bold" Margin="0 0 0 8"/>
                            <StackPanel Orientation="Horizontal" Height="30">
                                <CheckBox Height="15" Margin="0 0 8 0"/>
                                <Image Source="/Assets/Icons/star.bmp" Height="20" Width="20" Margin="0 0 0 3"/>
                                <Image Source="/Assets/Icons/star.bmp" Height="20" Width="20" Margin="0 0 0 3"/>
                                <Image Source="/Assets/Icons/star.bmp" Height="20" Width="20" Margin="0 0 0 3"/>
