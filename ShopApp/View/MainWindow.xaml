<Window x:Class="ShopApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp.ViewModel"
        xmlns:views="clr-namespace:ShopApp.View"
        mc:Ignorable="d"
        Height="900" Width="1440" Background="White"
        Title="Nav" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="LightGray" MouseDown="ListBox_Content_MouseDown">
            <Button Content="View 1" Click="NavigateToView1" Margin="10"/>
            <Button Content="View 2" Click="NavigateToView2" Margin="10"/>
            <Button Content="View 3" Click="NavigateToView3" Margin="10"/>
        </StackPanel>

        <Image Source="/Assets/Icons/close.png" Grid.Column="1" Panel.ZIndex="1" MouseUp="Image_MouseUp" Style="{StaticResource imgClose}" Margin="0 16 12 0"/>

        <ContentControl x:Name="MainContent" Grid.Column="1" MouseDown="ListBox_Content_MouseDown"/>

    </Grid>

</Window>
